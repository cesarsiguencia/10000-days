<audio id="intro-audio" name="Got To Be Real - Cheryl Lynn">
    <source src="media/audio/Got To Be Real - Intro.mp3">
</audio>
<audio id="mj" name="Thriller - Michael Jackson" onended="nextSong()">
    <source src="media/audio/Thriller.mp3">
</audio>
<audio id="prince-royce" name="Corazon Sin Cara - Prince Royce" onended="nextSong()">
    <source src="media/audio/Corazon Sin Cara.mp3">
</audio>
<audio id="ne-yo" name="Miss Independent - Ne-Yo" onended="nextSong()">
    <source src="media/audio/Miss Independent.mp3">
</audio>
<audio id="jay-z" name="Forever Young - Jay-Z" onended="nextSong()">
    <source src="media/audio/Forever Young.mp3">
</audio>


<main>
    <div class="hero-holder">
            <div class="hero flex-row justify-center" title="High reolution picture of Empire State Building overlooking the city on a low sunset. ">
        <div class="welcome-box">
            <div id="welcome-carousel">
            </div>
        </div>
    </div>
    </div>


    <section></section>

    <section class="sec" id="introduction">
        <div class="fireworks-bg" title="Subtle fireworks background placed in the background of this section"></div>
        <div class="section-content margin-center">
            <article>
                <p class="h2 sec-titles text-left">Welcome To My 10,000 Days Of Life!</p>

                <div class="content-divs">

                    <br />

                    <p>Celebrate with me on this unique and historic day as I reach a huge milestone in my life. Create
                        memories, dance to great music, and enjoy this festivity that happens once in a lifetime!</p>
                    <br />

                    <div class="intro-sub-btns-container">
                        <div class="justify-center">
                            <p class="p-strong"><strong>Save The Date!</strong></p>
                            <br />
                            <p>Click here to add this event to your default system calendar!</p>

                            <button class="sub-btns text-center">
                                <a class="a-fix" target="_blank"
                                    href="https://calendar.google.com/calendar/render?action=TEMPLATE&dates=20231022T010000Z%2F20231022T040000Z&location=305%20West%207th%20Avenue&text=Cezzie%27s%2010%2C000th%20Day%20B-Day%20Bash" aria-label="Save date of party to your Google calendar">Add
                                    to Calendar</a>
                            </button>
                        </div>

                        <div class="justify-center">
                            <p class="p-strong"><strong>RSVP already?</strong></p>
                            <br />
                            <p> Login in to change your info, RSVP status, or to interact with other invited guests</p>
                            <button class="sub-btns text-center" id="login-button-body">
                                <p>Login In</p>
                            </button>


                        </div>
                    </div>

                    <br />
                    <br />

                    <p class="p-strong">
                        <strong>If you haven't RSVP'ed yet,
                            <strong class="p-color">
                                click to immediately save a spot!
                            </strong>
                        </strong>
                    </p>

                    <div class="content-divs">
                        <div class="primary-btn margin-center">
                            <button type="submit" class="highlighted-options text-center margin-center animated-btns">
                                <a type="submit" href="/register" aria-label="Reserve your spot by registering.">
                                    <p class="h6">Reserve Your Spot TODAY!</p>
                                </a>
                            </button>
                        </div>
                    </div>
                </div>
            </article>

            <aside>
                <br />
                <p class="h4">Checkout posts from registered guests. Join the conversation
                    when you RSVP!</p>
                <div>
                    <div class="visuals margin-center">

                        <div class="overflow-hid flex-row">
                            {{#each posts as |post|}}

                            {{>homepg-posts post}}

                            {{/each}}
                        </div>

                        <div class="timer-bar">
                            <div class="timer-progress"></div>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </section>

    <section class="sec section-venue" id="venue">
        <div class="city-bg" title="Shadow of the skyline of New York City placed in the background bottom portion of section."></div>
        <div class="section-content margin-center">

            <aside>
                <div class="overflow-hid flex-row">
                    <a class="venue-slides" href="https://meauxspace.com" aria-label="Learn more about Meaux Space at their website." target="_blank">
                        <img class="venue-img" src="/media/lounge.avif" alt="Meaux space kitchen." width="550" height="550">
                    </a>

                    <a class="venue-slides" href="https://meauxspace.com" aria-label="Learn more about Meaux Space at their website." target="_blank">
                        <img class="venue-img" src="/media/lounge-2.avif" alt="Meaux space lounge." width="550" height="550">
                    </a>

                    <a class="venue-slides" href="https://meauxspace.com" aria-label="Learn more about Meaux Space at their website." target="_blank">
                        <img class="venue-img" src="/media/lounge-3.avif" alt="Meaux space balcony overlooking skyscrapers." width="550" height="550">
                    </a>

                </div>

            </aside>

            <article>
                <p class="h2 sec-titles text-left">Meaux Space: A Venue of it's own class</p>

                <div class="venue-info">
                    <div class="venue-info-blocks margin-center">
                        <div>
                            <p>We will unite at the Meaux Space in New York City, footsteps away from the Empire State
                                Building and Madison Square Garden with a view of Hudson Yards, a full size kitchen, and
                                balcony. </p>
                            <br>
                            <p>A 5 minute walk from New York Penn Station and a 12 minute walk from Port Authority Bus
                                Terminal. One could even come to town for the party and leave on the same day!</p>
                            <br />
                            <p>Want to see the venue? <strong class="p-color">click on the images!</strong></p>
                        </div>

                    </div>

                    <div class="venue-info-blocks margin-center">
                        <div class="overflow-hid map-holder">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6045.368314461362!2d-73.99814753169113!3d40.74697487178898!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259a55ff1ff8b%3A0x53ea09811ae57911!2s305%207th%20Ave%2C%20New%20York%2C%20NY%2010001!5e0!3m2!1sen!2sus!4v1689811181454!5m2!1sen!2sus"
                                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade" style="border:0;" allowfullscreen=""
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="skylark-img" title="Interactive aap widget provided by Google to show location of venue."></iframe>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>

    <section class="sec section-signup" id="ameneties">
        <div class="balloons-bg" title="Colorful confetti dancing in the background of section"></div>

        <div class="section-content margin-center">

            <article>
                <p class="h2 sec-titles text-left">What to expect at this party of the year!</p>



                <div class="content-divs">

                    <div>
                        <p>A handpicked selection of my favorite jams! Sample the collection with the<strong
                                class="p-color"> media player below</strong> and get ready to show off your dance moves!
                        </p>
                        <br />
                        <div class="logos transparent">
                            <div class="logos-slide">
                                <img src="/media/albums/Culture II.avif" alt="a pop album cover" width="200" height="200">
                                <img src="/media/albums/Thriller.avif" alt="a pop album cover" width="200" height="200">
                                <img src="/media/albums/Pink Friday.avif" alt="a pop album cover" width="200" height="200">
                                <img src="/media/albums/Prince-Royce.avif" alt="a pop album cover" width="200" height="200">
                                <img src="/media/albums/The Blueprint 3.avif" alt="a pop album cover" width="200" height="200">
                                <img src="/media/albums/Year Of The Gentleman.avif" alt="a pop album cover" width="200" height="200">
                                <img src="/media/albums/Party In The USA.avif" alt="a pop album cover" width="200" height="200">
                            </div>
                        </div>
                        <div class="media-player">
                            <div class="media-fixed">
                                <div class="media-controls justify-center">
                                    <img src="media/icons/play-pause.svg" alt="play/pause button for songs"
                                        class="music-btns" id="audio-trigger" width="50" height="50" >
                                    <img src="media/icons/fast-forward.svg" alt="skip button for next song"
                                        class="music-btns" id="next-button" width="50" height="50"> 


                                </div>
                                <div class="media-info flex justify-center">
                                    <p class="h4" id="song-info"></p>
                                </div>
                            </div>

                            <div class="playing-gif" title="Display of audio system showing levels of audio sound. Activate when user plays songs in this app."></div>

                        </div>

                    </div>

                    <div>
                        <p>Fine food and complemetary wine from top catering partners.</p>
                        <br />
                        <div class="logos">

                            <div class="slider-wrapper">
                                <div class="slider">
                                    <div class="food-slides" id="slide-1">
                                        <img src="media/food/pasta.avif" alt="spaghetti with meatballs plate" width="350" height="350">
                                        <img src="media/food/wine.avif" alt="wine with assorted bread and cheese" width="350" height="350">
                                    </div>

                                    <div class="food-slides" id="slide-2">
                                        <img src="media/food/fish.avif"
                                            alt="chilean sea bass dish with chimichurri sauce and salad bed underneath" width="350" height="350">
                                        <img src="media/food/ice cream.avif"
                                            alt="ice cream tiramisu on glass cups with oreos and sliced strawberry" width="350" height="350">

                                    </div>

                                    <div class="food-slides" id="slide-3">
                                        <img src="media/food/dessert.avif"
                                            alt="Frozen maple syrup souffle with almonds in cups" width="350" height="350">
                                        <img src="media/food/meat.avif" alt="Filet mignon on a cutting board" width="350" height="350">
                                    </div>

                                </div>

                                <div class="slider-nav" id="slider-nav">
                                    <a class="slider-btn" id="food-1" href="#slide-1" aria-label="Button to move to next carousel slide of food at venue"></a>
                                    <a class="slider-btn" id="food-2" href="#slide-2" aria-label="Button to move to next carousel slide of food at venue"></a>
                                    <a class="slider-btn" id="food-3" href="#slide-3" aria-label="Button to move to next carousel slide of food at venue"></a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </article>

            <aside>
                <div class="intro-div">
                    <div>
                        <p class="text-center">And much more, including <strong class="p-color">games, a photo booth,
                                and raffles!</strong>
                        </p>
                    </div>
                    <div class="visuals margin-center">
                        <br />
                        <p class="h2 text-center">Now that I have convinced you...
                        </p>
                        <br />
                        <button type="submit" class="highlighted-options text-center margin-center animated-btns">
                            <a type="submit" href="/register">
                                <p class="h6">What are you waiting for? Sign up RIGHT NOW!</p>
                            </a>
                        </button>
                        <br />
                    </div>
                </div>
            </aside>
        </div>
    </section>
</main>

{{!-- this was switched to it's own inline script because the appendChild action is massively delayed in home.js which
has a lot of functions already, causing a huge noticable gap in the carousel, resulting in a cut off an uneven slide of
images. --}}
<script>
    var copy = document.querySelector(".logos-slide").cloneNode(true);
    document.querySelector('.logos').appendChild(copy)
</script>
