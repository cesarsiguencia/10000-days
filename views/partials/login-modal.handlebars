<div class="modal" id="login-modal">
    <form class="login-container">
        <h2 class="intro-title">Login In</h2>
        <div class="form-components">
            <label for="form-email">Email</label>
            <input type="email" placeholder="Enter email" name="email" id="login-email" class="textbox"/>
        </div>

        <div class="form-components">
            <label for="form-password">Password</label>
            <input type="password" placeholder="Enter password" name="password" id="login-password" class="textbox"/>
        </div>

        <button  type='submit' class="highlighted-options text-center margin-center" id="login-submit">
            <h6>
                Login
            </h6>
        </button>
        <br/>
        <p>If you have not signed up yet, please click <a href="/register">HERE</a></p>
        <br />
        <button class="highlighted-options text-center margin-center" id="modal-close">
            <h6>
                Close
            </h6>
        </button>
    </form>
</div>