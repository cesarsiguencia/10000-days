<div class="modal" id="edit-modal">
    <form id="edit-container" class="container">
        <h2 class="intro-title">Edit your post</h2>
        <div class="form-components">
            <label for="form-post">Post Text</label>
            <input type="text" placeholder='New Post Text Here' name="post-modal-text" id="post-modal-text" class="textbox"/>
        </div>

        <div class="form-components">
            <label for="form-password">Password</label>
            <input type="text" placeholder="New link" name="post-modal-link" id="post-modal-link" class="textbox"/>
        </div>

        <button  type='submit' class="highlighted-options text-center margin-center" id="login-submit">
            <h6>
                COMPLETE EDITS
            </h6>
        </button>
        <br/>

        <br />
        <button class="highlighted-options text-center margin-center" id="edit-close">
            <h6>
                Close
            </h6>
        </button>
    </form>
</div>